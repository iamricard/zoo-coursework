<?xml version="1.0" encoding="utf-8"?>
<layout>

  <data>

    <import type="android.view.View" />

    <variable
      name="animal"
      type="internet.famous.animal.zoo.data.local.Animal" />

    <variable
      name="species"
      type="internet.famous.animal.zoo.data.local.Species" />
  </data>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:paddingTop="16dp">

    <TextView
      android:id="@+id/entity_type"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:gravity="center"
      android:text="@{species.emoji}"
      android:textColor="#000000"
      android:textSize="24sp" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:paddingEnd="0dp"
      android:paddingStart="16dp">

      <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{String.format(@string/animal_title, animal.name)}"
        android:textAppearance="?android:attr/textAppearanceListItem" />

      <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{String.format(@string/animal_subtitle, species.name)}"
        android:textAppearance="?android:attr/textAppearanceListItemSecondary" />

      <TextView
        android:id="@+id/no_pen_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{animal.pen.getTarget() == null ? @string/no_pen_assigned : @string/pen_assigned}"
        android:textColor="@{animal.pen.getTarget() == null ? @android:color/holo_red_dark : @android:color/holo_green_dark}"
        android:textAppearance="?android:attr/textAppearanceListItemSecondary" />
    </LinearLayout>

    <Button
      android:id="@+id/assign_btn"
      style="@style/Widget.AppCompat.Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/animal_assign_pen" />
  </LinearLayout>
</layout>