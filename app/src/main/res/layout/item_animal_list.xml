<?xml version="1.0" encoding="utf-8"?>
<layout>

  <data>

    <import type="android.view.View" />

    <variable
      name="animal"
      type="internet.famous.animal.zoo.data.local.Animal" />

    <variable
      name="species"
      type="internet.famous.animal.zoo.data.local.Species" />
  </data>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/entity_type"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:gravity="center"
      android:text="@{species.emoji}"
      android:textColor="#000000"
      android:textSize="24sp" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingEnd="0dp"
      android:paddingStart="16dp">

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
          android:id="@+id/title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@{String.format(@string/animal_title, animal.name)}"
          android:textAppearance="?android:attr/textAppearanceListItem" />

        <TextView
          android:id="@+id/subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@{String.format(@string/animal_subtitle, species.name)}"
          android:textAppearance="?android:attr/textAppearanceListItemSecondary"
          android:textColor="?android:textColorSecondary" />

        <TextView
          android:id="@+id/no_pen_warning"
          android:visibility="@{animal.pen.getTarget() == null ? View.VISIBLE : View.GONE}"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/no_pen_assigned"
          android:textAppearance="?android:attr/textAppearanceListItemSecondary"
          android:textColor="@color/colorAccent" />
      </LinearLayout>

      <Button
        android:id="@+id/assign_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animal_assign_pen" />
    </LinearLayout>
  </LinearLayout>
</layout>