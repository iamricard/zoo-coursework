<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="internet.famous.animal.zoo">

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:name=".App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
    <activity android:name=".ui.main.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".ui.create.CreateAnimalActivity" />
    <activity android:name=".ui.create.CreateKeeperActivity" />
    <activity android:name=".ui.create.CreateSpeciesActivity" />
    <activity android:name=".ui.create.CreatePenActivity" />
  </application>
</manifest>
